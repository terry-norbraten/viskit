<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<SimEntity author="ahbuss" extend="SimEntityBase" name="Creator" package="examples" version="1.0" xsi:noNamespaceSchemaLocation="http://diana.nps.edu/Simkit/simkit.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <StateVariable name="nextID" type="int">
        <Comment/>
    </StateVariable>
    <Event name="Arrival">
        <Comment/>
        <StateTransition state="nextID">
            <Assignment value="nextID+1"/>
        </StateTransition>
        <Schedule condition="true" delay="0.0" event="CustomerArrival" priority="DEFAULT">
            <Comment/>
            <EdgeParameter value="new Integer(nextID)"/>
        </Schedule>
        <Code/>
        <Coordinate x="30" y="120"/>
    </Event>
    <Event name="CustomerArrival">
        <Comment/>
        <Argument name="customer" type="Integer"/>
        <Code/>
        <Coordinate x="180" y="110"/>
    </Event>
    <Event name="Run">
        <Comment/>
        <StateTransition state="nextID">
            <Assignment value="0"/>
        </StateTransition>
        <Code/>
        <Coordinate x="20" y="0"/>
    </Event>
</SimEntity>

