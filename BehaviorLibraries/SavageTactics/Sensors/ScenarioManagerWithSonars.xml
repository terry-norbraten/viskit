<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<SimEntity author="Rick Goldberg" extend="diskit.ScenarioManager" name="ScenarioManagerWithSonars" package="test" version="1.0" xsi:noNamespaceSchemaLocation="http://diana.gl.nps.navy.mil/Simkit/simkit.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Comment>used to initialize ScenarioManager with BasicLogRangeATLSonarMediator against any Mover3D</Comment>
    <Parameter name="speedScale" type="double">
        <Comment/>
    </Parameter>
    <Parameter name="clearOnReset" type="boolean">
        <Comment/>
    </Parameter>
    <Parameter name="inetAddr" type="java.lang.String">
        <Comment/>
    </Parameter>
    <Parameter name="port" type="int">
        <Comment/>
    </Parameter>
    <Parameter name="siteID" type="int">
        <Comment/>
    </Parameter>
    <Parameter name="appID" type="int">
        <Comment/>
    </Parameter>
    <Event name="Run">
        <Schedule condition="true" delay="0.0" event="AddSonarMediator" priority="0">
            <Comment/>
            <EdgeParameter value="diskit.MultiLRATLSonar.class"/>
            <EdgeParameter value="diskit.Mover3D.class"/>
            <EdgeParameter value="diskit.SonarMediator.class"/>
        </Schedule>
        <Code/>
        <Coordinate x="30" y="30"/>
    </Event>
    <Event name="AddSonarMediator">
        <Comment/>
        <Argument name="sensor" type="java.lang.Class"/>
        <Argument name="target" type="java.lang.Class"/>
        <Argument name="mediator" type="java.lang.Class"/>
        <Code>addSensorTargetMediator(sensor,target,mediator);
addDefaultMediator(diskit.Mover3D.class); // taken out for perf test</Code>
        <Coordinate x="30" y="150"/>
    </Event>
    <Event name="AddDefaultMediator">
        <Comment>override this for perf test</Comment>
        <Argument name="target" type="java.lang.Class"/>
        <Code/>
        <Coordinate x="150" y="20"/>
    </Event>
</SimEntity>

