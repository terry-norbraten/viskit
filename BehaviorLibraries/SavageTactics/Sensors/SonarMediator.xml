<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<SimEntity author="Rick Goldberg" extend="diskit.SphereCutterMediator" name="SonarMediator" package="diskit" version="1.0" xsi:noNamespaceSchemaLocation="http://diana.gl.nps.navy.mil/Simkit/simkit.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Comment>Handles transition from low resolution bounding sphere to wedge and sonar equation detection</Comment>
    <Event name="EnterRange">
        <Comment>Contact has entered within some range just beyond the physical range of the sensor</Comment>
        <Argument name="sensor" type="diskit.Sensor"/>
        <Argument name="contact" type="diskit.Mover3D"/>
        <Schedule condition="true" delay="0.0" event="CheckDetection" priority="0">
            <Comment/>
            <EdgeParameter value="sensor"/>
            <EdgeParameter value="contact"/>
        </Schedule>
        <Code/>
        <Coordinate x="30" y="200"/>
    </Event>
    <Event name="CheckDetection">
        <Comment/>
        <Argument name="sensor" type="diskit.Sensor"/>
        <Argument name="contact" type="diskit.Mover3D"/>
        <Code>sensor.waitDelay("CheckDetection",0.0,new Object[]{contact});</Code>
        <Coordinate x="30" y="330"/>
    </Event>
</SimEntity>

