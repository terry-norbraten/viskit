<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<SimEntity extend="SimEntityBase" version="0.1" package="examples" name="ArrivalProcess" xsi:noNamespaceSchemaLocation="http://diana.nps.edu/Simkit/simkit.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Parameter type="simkit.random.RandomVariate" name="interarrivalTime"/>
    <StateVariable type="int" name="numberArrivals"/>
    <Event name="Run">
        <StateTransition state="numberArrivals">
            <Assignment value="0"/>
        </StateTransition>
        <Schedule priority="DEFAULT" event="Arrival" delay="interarrivalTime.generate()"/>
        <Coordinate y="60" x="40"/>
    </Event>
    <Event name="Arrival">
        <StateTransition state="numberArrivals">
            <Assignment value="numberArrivals + 1"/>
        </StateTransition>
        <Schedule priority="DEFAULT" event="Arrival" delay="interarrivalTime.generate()"/>
        <Coordinate y="60" x="250"/>
    </Event>
</SimEntity>
