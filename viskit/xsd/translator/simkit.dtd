<!ELEMENT SimEntity ( Comment*, Parameter*, StateVariable*, Event* ) >
<!ATTLIST SimEntity
        name            CDATA   #REQUIRED
        package         CDATA   "examples"
	version		CDATA	#REQUIRED
        author          CDATA   #IMPLIED
>

<!ELEMENT Comment ( #PCDATA ) >

<!ELEMENT StateVariable  ( Comment )* >
<!ATTLIST StateVariable
	type        CDATA	#REQUIRED
	name        ID  	#REQUIRED
>

<!ELEMENT Argument ( Comment )* >
<!ATTLIST Argument
	type	    CDATA	#REQUIRED
        name        ID          #REQUIRED
>

<!ELEMENT Parameter ( Comment )* >
<!ATTLIST Parameter
	type        CDATA	#REQUIRED
	name        ID  	#REQUIRED
>

<!ELEMENT LocalVariable ( Comment )* >
<!ATTLIST LocalVariable
        type        CDATA       #REQUIRED
        name        ID          #REQUIRED
        value       CDATA       #IMPLIED
>

<!ELEMENT Event	( Comment*, Argument*, LocalVariable*, StateTransition*, (Schedule|Cancel)*, Coordinate? ) > 
<!ATTLIST Event
	name		ID	#REQUIRED
>

<!ELEMENT Coordinate EMPTY >
<!ATTLIST Coordinate 
	x	CDATA	#REQUIRED
	y	CDATA	#REQUIRED
>

<!ELEMENT Operation EMPTY >
<!ATTLIST Operation
        method  CDATA   #REQUIRED   
>

<!ELEMENT Assignment EMPTY >
<!ATTLIST Assignment
        value   CDATA   #REQUIRED
>

<!ELEMENT StateTransition ( Assignment|Operation ) >
<!ATTLIST StateTransition
        state           IDREF   #REQUIRED
	index		IDREF	#IMPLIED
>
  
<!ELEMENT EdgeParameter EMPTY >
<!ATTLIST EdgeParameter
        value   CDATA	#REQUIRED
>

<!ELEMENT Schedule ((Comment*),(EdgeParameter)*) >
<!ATTLIST Schedule
	delay	CDATA	"0.0"
	event	IDREF	#REQUIRED
	condition CDATA	#IMPLIED 
        priority  CDATA  "0.0"	
>

<!ELEMENT Cancel ((Comment*),(EdgeParameter)*) >
<!ATTLIST Cancel
	event	IDREF	#REQUIRED
	condition CDATA	#IMPLIED 	
>
