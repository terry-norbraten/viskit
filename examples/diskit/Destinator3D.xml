<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<SimEntity package="diskit" name="Destinator3D" version="1.0" extend="SimEntityBase" author="rickg" xsi:noNamespaceSchemaLocation="http://diana.gl.nps.navy.mil/Simkit/simkit.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Parameter type="simkit.random.RandomVariate" name="random">
        <Comment/>
    </Parameter>
    <Event name="ArrivePoint">
        <Comment/>
        <Schedule event="NewDestination"/>
        <Coordinate y="55" x="85"/>
    </Event>
    <Event name="NewDestination">
        <Comment/>
        <LocalVariable type="mil.navy.nps.math.Vec4f" name="randomDest" value="new mil.navy.nps.math.Vec4f((float)random.generate(),(float)random.generate(),(float)random.generate(),(float)Schedule.getSimTime()+(float)random.generate())">
            <Comment/>
        </LocalVariable>
        <Schedule priority="0" delay="0.0" event="UpdateDestination" condition="true">
            <Comment/>
            <EdgeParameter value="randomDest"/>
        </Schedule>
        <Coordinate y="70" x="192"/>
    </Event>
    <Event name="UpdateDestination">
        <Comment/>
        <Argument type="mil.navy.nps.math.Vec4f" name="newDestination"/>
        <Coordinate y="207" x="195"/>
    </Event>
    <Event name="Run">
        <Comment>set rv</Comment>
        <Schedule event="NewDestination"/>
        <Coordinate y="159" x="36"/>
    </Event>
</SimEntity>

