<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<SimEntity package="examples.diskit" name="SimSender3D" version="1.0" extend="examples.diskit.DISMover3DSender" author="rmgoldbe" xsi:noNamespaceSchemaLocation="http://diana.gl.nps.navy.mil/Simkit/simkit.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Comment>does 3 things
listen for inits to add a mover to the ping group
listen for pings to send
count pings sent per send</Comment>
    <Parameter type="java.lang.String" name="inetAddr">
        <Comment/>
    </Parameter>
    <Parameter type="int" name="port">
        <Comment/>
    </Parameter>
    <StateVariable type="int" name="totalMovers">
        <Comment/>
    </StateVariable>
    <Event name="Init">
        <Comment>add a mover3D</Comment>
        <Argument type="examples.diskit.DISMover3DBase" name="mover"/>
        <StateTransition state="totalMovers">
            <Assignment value="addMover3D(mover)"/>
        </StateTransition>
        <Coordinate y="253" x="52"/>
    </Event>
    <Event name="Ping">
        <Comment/>
        <StateTransition state="totalMovers">
            <Assignment value="sendPings()"/>
        </StateTransition>
        <Coordinate y="157" x="202"/>
    </Event>
</SimEntity>

