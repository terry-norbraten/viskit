<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<SimEntity author="Rick Goldberg" package="examples.diskit" version="1.0" name="SimServer3DTest" extend="examples.diskit.DISServer3DBase" xsi:noNamespaceSchemaLocation="http://diana.gl.nps.navy.mil/Simkit/simkit.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Comment>Simple test to count number of EntityStatePdu's received</Comment>
    <Parameter name="ipAddr" type="String">
        <Comment/>
    </Parameter>
    <Parameter name="port" type="int">
        <Comment/>
    </Parameter>    
    <Parameter type="double" name="msst"/>
    <StateVariable type="int" name="count">
        <Comment/>
    </StateVariable>
    <Event name="ESPDU_in">
        <Comment/>
        <Argument type="mil.navy.nps.dis.EntityStatePdu" name="pdu"/>
        <StateTransition state="count">
            <Assignment value="count+1"/>
        </StateTransition>
        <Coordinate x="220" y="160"/>
    </Event>
    <Event name="Run">
        <Comment/>
        <StateTransition state="count">
            <Assignment value="0"/>
        </StateTransition>
        <Coordinate x="80" y="170"/>
    </Event>
</SimEntity>

