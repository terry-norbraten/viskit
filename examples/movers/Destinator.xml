<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<SimEntity version="1.0" name="Destinator" package="examples.movers" author="rickg" xsi:noNamespaceSchemaLocation="http://diana.gl.nps.navy.mil/Simkit/simkit.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Parameter name="random" type="simkit.random.RandomVariate">
        <Comment/>
    </Parameter>
    <Event name="ArrivePoint">
        <Comment/>
        <Schedule event="NewDestination"/>
        <Coordinate y="55" x="85"/>
    </Event>
    <Event name="NewDestination">
        <Comment/>
        <LocalVariable name="randomDest" value="new javax.vecmath.Point4d(random.generate(),random.generate(),random.generate(),Schedule.getSimTime()+random.generate())" type="javax.vecmath.Point4d">
            <Comment/>
        </LocalVariable>
        <Schedule delay="0.0" condition="true" event="UpdateDestination" priority="0">
            <Comment/>
            <EdgeParameter value="randomDest"/>
        </Schedule>
        <Coordinate y="70" x="192"/>
    </Event>
    <Event name="UpdateDestination">
        <Comment/>
        <Argument type="javax.vecmath.Point4d" name="newDestination"/>
        <Coordinate y="187" x="245"/>
    </Event>
    <Event name="Run">
        <Comment>set rv</Comment>
        <Schedule event="NewDestination"/>
        <Coordinate y="159" x="36"/>
    </Event>
</SimEntity>

