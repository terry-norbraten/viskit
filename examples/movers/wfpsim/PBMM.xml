<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<SimEntity name="PBMM" extend="simkit.smdx.PathMoverManager" package="examples.movers.wfpsim" author="rmgoldbe" version="1.0" xsi:noNamespaceSchemaLocation="http://diana.gl.nps.navy.mil/Simkit/simkit.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Comment>PatrolBoatMoverManager ( PBMM for short )</Comment>
    <Parameter name="patrolBoatMover" type="simkit.smdx.UniformLinearMover">
        <Comment/>
    </Parameter>
    <Parameter name="path" type="java.awt.geom.Point2D[]">
        <Comment/>
    </Parameter>
    <StateVariable name="wayPoint" type="int">
        <Comment/>
    </StateVariable>
    <StateVariable name="patrolling" type="boolean">
        <Comment/>
    </StateVariable>
    <StateVariable name="patrolBoat" type="simkit.smdx.UniformLinearMover">
        <Comment/>
    </StateVariable>
    <Event name="Run">
        <Comment/>
        <StateTransition state="wayPoint">
            <Assignment value="0"/>
        </StateTransition>
        <StateTransition state="patrolBoat">
            <Assignment value="patrolBoatMover"/>
        </StateTransition>
        <Coordinate y="55" x="46"/>
    </Event>
    <Event name="StartPatrolling">
        <Comment/>
        <StateTransition state="patrolling">
            <Assignment value="true"/>
        </StateTransition>
        <Schedule event="NextWayPt" delay="0.0" condition="patrolling" priority="0">
            <Comment/>
        </Schedule>
        <Coordinate y="175" x="48"/>
    </Event>
    <Event name="NextWayPt">
        <Comment/>
        <StateTransition state="patrolBoat">
            <Operation method="moveTo(path[wayPoint])"/>
        </StateTransition>
        <Schedule event="StartMove"/>
        <Coordinate y="203" x="219"/>
    </Event>
    <Event name="StartMove">
        <Comment/>
        <LocalVariable value="null" name="tgt" type="simkit.smdx.UniformLinearMover">
            <Comment/>
        </LocalVariable>
        <Schedule event="EndMove" delay="patrolBoat.getMoveTime()" condition="true" priority="0">
            <Comment/>
            <EdgeParameter value="tgt"/>
        </Schedule>
        <Coordinate y="114" x="419"/>
    </Event>
    <Event name="EndMove">
        <Comment/>
        <Argument name="tgt" type="simkit.smdx.UniformLinearMover"/>
        <StateTransition state="wayPoint">
            <Assignment value="wayPoint + ((wayPoint &gt;= (path.length-1))?1:-wayPoint)"/>
        </StateTransition>
        <Schedule event="NextWayPt"/>
        <Schedule event="EndIntercept" delay="0.0" condition="(!patrolling) &amp;&amp; (tgt != null)" priority="0">
            <Comment/>
            <EdgeParameter value="tgt"/>
        </Schedule>
        <Coordinate y="319" x="424"/>
    </Event>
    <Event name="Intercept">
        <Comment>Notes: the thesis shows a schedule from EndMove if another Intercept is immediately ready</Comment>
        <Argument name="intercept" type="java.awt.geom.Point2D"/>
        <Argument name="newTarget" type="simkit.smdx.UniformLinearMover"/>
        <StateTransition state="patrolBoat">
            <Operation method="moveTo(intercept)"/>
        </StateTransition>
        <StateTransition state="patrolling">
            <Assignment value="false"/>
        </StateTransition>
        <Cancel event="EndMove"/>
        <Schedule event="EndMove" delay="patrolBoat.getMoveTime()" condition="true" priority="0">
            <Comment/>
            <EdgeParameter value="newTarget"/>
        </Schedule>
        <Coordinate y="324" x="50"/>
    </Event>
    <Event name="EndIntercept">
        <Comment/>
        <Argument name="tgt" type="simkit.smdx.UniformLinearMover"/>
        <StateTransition state="patrolling">
            <Assignment value="true"/>
        </StateTransition>
        <Coordinate y="460" x="417"/>
    </Event>
    <Event name="Stop">
        <Comment/>
        <StateTransition state="patrolling">
            <Assignment value="false"/>
        </StateTransition>
        <StateTransition state="patrolBoat">
            <Operation method="stop()"/>
        </StateTransition>
        <Cancel event="EndMove"/>
        <Coordinate y="462" x="58"/>
    </Event>
</SimEntity>

