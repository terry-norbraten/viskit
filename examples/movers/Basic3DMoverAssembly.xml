<SimkitAssembly 
    name="Basic3DMoverAssembly"
    package="examples.movers"
    version="0.1"
>

    <SimEntity name="mover" type="examples.movers.Basic3DMover">
	<TerminalParameter type="java.lang.String" name="name" value="Mover3D"/>
	<TerminalParameter type="javax.vecmath.Point4d" name="start" value="0.0,0.0,0.0,0.0"/>
	<TerminalParameter type="double" name="speedLimit" value="25.0"/>
	<TerminalParameter type="double" name="frameInterval" value=".25"/>
    </SimEntity>

    <SimEntity name="destinator" type="examples.movers.Destinator">
	<FactoryParameter type="simkit.random.RandomVariate" 
                factory="simkit.random.RandomVariateFactory">
            <TerminalParameter type="String" value="Exponential" />
            <MultiParameter type="Object[]" >
                <TerminalParameter type="java.lang.Double" value="10.0" />
            </MultiParameter>
            <TerminalParameter type="long" value="simkit.random.CongruentialSeeds.SEED[0]" />
        </FactoryParameter>
    </SimEntity> 

    <PropertyChangeListener name="dumper" type="simkit.util.SimplePropertyDumper" />

        
    <SimEventListenerConnection source="mover" listener="destinator" />
    <SimEventListenerConnection source="destinator" listener="mover" />

    <PropertyChangeListenerConnection source="mover" listener="dumper" />


    <Output entity="mover" />

    <Schedule stopTime="100.0" />

</SimkitAssembly>
