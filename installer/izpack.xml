<?xml version="1.0" encoding="UTF-8"?>

<!--
    Document   : izpack.xml
    Created on : September 3, 2006, 2:29 PM
    Author     : rmgold
    Description:
        IzPack Installer builder for Win 32 / Unix Viskit
-->

<installation version="1.0">

    <variables>
        <variable name="DesktopShortcutCheckboxEnabled" value="true"/>
    </variables>
    <info>
        <appname>@{product.Name}</appname>
        <appversion>v@{product.Version}</appversion>
        <appsubpath>viskit-@{product.Version}</appsubpath>
        <authors>
            <author name="Mike Bailey" email="jmbailey@nps.edu"/>
            <author name="Curt Blais" email="cblais@nps.edu"/>
            <author name="Don Brutzman" email="brutzman@nps.edu"/>
            <author name="Arnie Buss" email="abuss@nps.edu"/>
            <author name="Len Daly" email="leonard.daly@realism.com"/>
            <author name="Rick Goldberg" email="rick@aniviza.com"/>
            <author name="Alan Hudson" email="giles@yumetech.com"/>
            <author name="Don McGregor" email="mcgredo@nps.edu"/>
            <author name="Terry Norbraten" email="tdnorbra@nps.edu"/>
            <author name="Pat Sullivan" email="pvsksullivan@gmail.com"/>
        </authors>
        <url>@{product.url}</url>
        <!-- Minimum JDK version required -->
        <javaversion>1.7</javaversion>
        <requiresjdk>yes</requiresjdk>
        <summarylogfilepath>$INSTALL_PATH/InstallSummary.htm</summarylogfilepath>
        <!-- Hopefully helps with Win Vista/7/8 installs -->
        <run-privileged condition="izpack.windowsinstall.vista|izpack.windowsinstall.7|izpack.windowsinstall.8"/>
    </info>

    <guiprefs height="600" width="800" resizable="yes">
        <laf name="liquid">
            <os family="unix,windows"/>
        </laf>
    </guiprefs>

    <locale>
        <!-- The English will have to live with USA version -->
        <langpack iso3="usa"/>
        <langpack iso3="fra"/>
        <langpack iso3="deu"/>
        <langpack iso3="spa"/>
        <langpack iso3="jpn"/>
        <langpack iso3="ita"/>
    </locale>

    <resources>
        <res src="images/ViskitLogo.png" id="Installer.image"/>
        <res src="stage/license/lgpl.txt" id="LicencePanel.licence"/>
        <res src="stage/intro_no_diskit.html" id="HTMLInfoPanel.info"/>
        <res src="shortcutSpec.xml" id="shortcutSpec.xml"/>
        <res src="Unix_shortcutSpec.xml" id="Unix_shortcutSpec.xml"/>
    </resources>

    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="HTMLInfoPanel" id="info"/>
        <panel classname="LicencePanel" id="licence"/><!--not my english-->
        <panel classname="PacksPanel"/>
        <panel classname="TargetPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="ShortcutPanel"/>
        <panel classname="SimpleFinishPanel"/>
    </panels>
    <listeners>
        <listener installer="SummaryLoggerInstallerListener"/>
    </listeners>
    <packs>
        <pack name="Core" required="yes">
            <description>Core Viskit Application Files</description>
            <fileset dir="stage" targetdir="$INSTALL_PATH">
                <os family="windows"/>
                <include name="Viskit.exe"/>
            </fileset>
            <fileset dir="stage" targetdir="$INSTALL_PATH">
                <os family="windows"/>
                <os family="unix"/>
                <include name="Schemas/**"/>
                <exclude name="Schemas/legacyDTDs/**"/>
                <include name="configuration/**"/>
                <exclude name="configuration/AnalystReportXMLtoHTML.xslt"/>
                <include name="images/**"/>
                <exclude name="images/american-flag.gif"/>
                <include name="lib/**" />
                <include name="license/**" />
                <include name="viskit/**"/>
                <include name="viskit-exe.jar"/>
                <include name="RELEASE_NOTES*"/>
            </fileset>
            <fileset dir="stage" targetdir="$USER_HOME">
              <os family="windows"/>
              <os family="unix"/>
              <include name="MyViskitProjects/DefaultProject/Assemblies/**"/>
              <include name="MyViskitProjects/DefaultProject/EventGraphs/**"/>
            </fileset>
            <fileset dir="stage/configuration" targetdir="$USER_HOME/MyViskitProjects/DefaultProject">
                <os family="windows"/>
                <os family="unix"/>
                <include name="viskitProject.xml"/>
            </fileset>

            <!-- Sets +x attributes -->
            <executable targetfile="$INSTALL_PATH/Viskit.exe" type="bin" keep="true" stage="never" failure="warn">
                <os family="windows"/>
            </executable>

            <executable targetfile="$INSTALL_PATH/viskit-exe.jar" type="jar" keep="true" stage="never" failure="warn">
                <os family="windows"/>
                <os family="unix"/>
            </executable>
        </pack>
    </packs>

    <native type="izpack" name="ShellLink.dll">
        <os family="windows"/>
    </native>
    <native type="3rdparty" name="COIOSHelper.dll" stage="both">
        <os family="windows"/>
    </native>

    <!-- Don't forget 64 bit Windows O/Ss -->
    <native type="izpack" name="ShellLink_x64.dll">
        <os family="windows"/>
    </native>
    <native type="3rdparty" name="COIOSHelper_x64.dll" stage="both">
        <os family="windows"/>
    </native>
</installation>
