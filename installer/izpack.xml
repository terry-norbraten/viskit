        IzPack Installer builder for Viskit
-->

<installation version="1.0">
    
    <info>
        <appname>Viskit</appname>
        <appversion>"0.4.1"</appversion>
        <authors>
            <author name="Mike Bailey" email="jmbailey@nps.edu"/>
            <author name="Don Brutzman" email="brutzman@nps.edu"/>
            <author name="Arnie Buss" email="abuss@nps.edu"/>
            <author name="Rick Goldberg" email="rick@aniviza.com"/>
            <author name="Don McGregor" email="mcgredo@nps.edu"/>
            <author name="Pat Sullivan (Lt.)" email="pjsulliv@nps.edu"/>
        </authors>
        <url>http://diana.gl.nps.navy.mil/Viskit</url>
        <javaversion>1.5</javaversion>
    </info>
    
    <guiprefs height="600" width="800" resizable="yes">
        <laf name="liquid">
            <os family="mac,unix,windows"/>
        </laf>
    </guiprefs>
    
    <locale>
        <langpack iso3="eng"/>
        <langpack iso3="fra"/>
        <langpack iso3="deu"/>
        <langpack iso3="spa"/>
        <langpack iso3="jpn"/>
        <langpack iso3="ita"/>
    </locale>
    
    <resources>
        <res src="stage/license/lgpl.txt" id="LicensePanel.license"/>
    </resources>
    
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="HTMLInfoPanel"/>
        <panel classname="LicencePanel"/><!--not my english-->
        <panel classname="PacksPanel"/>
        <panel classname="TargetPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="SimpleFinishPanel"/>
    </panels>
    
    <packs>
        <pack name="Core" required="yes">
            <description>Viskit Application Files</description>
            <fileset dir="stage" targetdir="$INSTALL_PATH">
                <include name="lib/**/*" />
                <include name="Viskit.exe"/>
            </fileset>
        </pack>
        <pack name="Examples" required="yes">
            <description>Viskit Examples</description>
        </pack>
        <pack name="BehaviorLibraries" required="no">
            <description>SavageDefenseTactics, SavageTactics</description>
            <fileset dir="stage" targetdir="$INSTALL_PATH">
                <include name="BehaviorLibraries"/>
            </fileset>
        </pack> 
    </packs>

</installation>