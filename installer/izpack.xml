<?xml version="1.0" encoding="UTF-8"?>

<!--
    Document   : izpack.xml
    Created on : September 3, 2006, 2:29 PM
    Author     : rmgold
    Description:
        IzPack Installer builder for Win 32 / Unix Viskit
-->

<installation version="1.0">
    
    <variables>
        <variable name="JDKPathPanel.minVersion" value="1.6.0" />
        <variable name="JDKPathPanel.maxVersion" value="1.6.0_99" />
        <variable name="JDKPathPanel.skipIfValid" value="yes" />
        <variable name="DesktopShortcutCheckboxEnabled" value="true"/>
    </variables>
    <info>
        <appname>@{product.Name}</appname>
        <appversion>@{product.Version}</appversion>
        <appsubpath>Viskit</appsubpath>
        <authors>
            <author name="Mike Bailey" email="jmbailey@nps.edu"/>
            <author name="Curt Blais" email="cblais@nps.edu"/>
            <author name="Don Brutzman" email="brutzman@nps.edu"/>
            <author name="Arnie Buss" email="abuss@nps.edu"/>
            <author name="Len Daly" email="leonard.daly@realism.com"/>
            <author name="Rick Goldberg" email="rick@aniviza.com"/>
            <author name="Alan Hudson" email="giles@yumetech.com"/>
            <author name="Don McGregor" email="mcgredo@nps.edu"/>
            <author name="Terry Norbraten" email="tdnorbra@nps.edu"/>
            <author name="Pat Sullivan" email="pvsksullivan@gmail.com"/>
        </authors>
        <url>@{product.url}</url>
        <javaversion>1.6</javaversion>
        <requiresjdk>yes</requiresjdk>
        <writeinstallationinformation>yes</writeinstallationinformation>
    </info>
    
    <guiprefs height="600" width="800" resizable="yes">
        <laf name="liquid">
            <os family="unix,windows"/>
        </laf>
    </guiprefs>

    <locale>
        <!-- The English will have to live with USA version -->
        <langpack iso3="usa"/>
        <langpack iso3="fra"/>
        <langpack iso3="deu"/>
        <langpack iso3="spa"/>
        <langpack iso3="jpn"/>
        <langpack iso3="ita"/>
    </locale>
    
    <resources>
        <res id="Installer.image" src="images/ViskitLogo.png"/>
        <res src="stage/license/lgpl.txt" id="LicencePanel.licence"/>
        <res src="stage/intro_no_diskit.html" id="HTMLInfoPanel.info"/>
        <res src="shortcutSpec.xml" id="shortcutSpec.xml"/>
        <res src="Unix_shortcutSpec.xml" id="Unix_shortcutSpec.xml"/>
    </resources>
    
    <panels>
        <panel classname="HelloPanel" id="hellopanel"/>
        <panel classname="HTMLInfoPanel" id="infopanel" />
        <panel classname="LicencePanel" id="licensepanel"/><!--not my english-->
        <panel classname="PacksPanel" id="packspanel"/>
        <panel classname="TargetPanel" id="targetpanel"/>
        <panel classname="InstallPanel" id="installpanel"/>
        <panel classname="ShortcutPanel" id="shortcutpanel"/>
        <panel classname="SimpleFinishPanel" id="finishpanel"/>
    </panels>
    <listeners>
        <listener installer="SummaryLoggerInstallerListener"/>
    </listeners>
    <packs>
        <pack name="Core" required="yes">
            <description>Core Viskit Application Files</description>
            <fileset dir="stage" targetdir="$INSTALL_PATH">
                <os family="windows"/>
                <include name="Schemas/**"/>
                <include name="configuration/**"/>
                <include name="examples/**"/>
                <include name="images/**"/>
                <include name="lib/**" />
                <include name="license/**" />
                <include name="viskit/**"/>
                <include name="viskit-exe.jar"/>
                <include name="intro_no_diskit.html"/>
                <include name="Viskit.exe"/>
            </fileset>
            <fileset dir="stage" targetdir="$INSTALL_PATH">
                <os family="unix"/>
                <include name="Schemas/**"/>
                <include name="configuration/**"/>
                <include name="examples/**"/>
                <include name="images/**"/>
                <include name="lib/**" />
                <include name="license/**" />
                <include name="viskit/**"/>
                <include name="viskit-exe.jar"/>
                <include name="intro_no_diskit.html"/>
            </fileset>
        </pack>
    </packs>
    <native type="izpack" name="ShellLink.dll">
        <os family="windows"/>
    </native>
    <native type="3rdparty" name="COIOSHelper.dll" stage="both">
        <os family="windows"/>
    </native>

    <!-- Don't forget the 64 bit Windows OS -->
    <native type="izpack" name="ShellLink_x64.dll">
        <os family="windows"/>
    </native>

    <native type="3rdparty" name="COIOSHelper_x64.dll" stage="both">
        <os family="windows"/>
    </native>
</installation>
