<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="Viskit-IDE">
    <import file="../build.xml"/>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/41/freeform-config.html#runsingle) -->
    <target name="run-selected-file-in-Viskit">
        <fail unless="run.class">Must set property 'run.class'</fail>
        <!-- This target assumes that viskit.jar is already built ${run.class} -->
        <java classname="viskit.xsd.translator.SimkitXML2Java" failonerror="true" fork="true">
            <classpath>
                <pathelement path="build/lib/viskit.jar;lib/actions.jar;lib/bsh-2.0b4.jar;lib/commons-beanutils-1.7.0.jar;lib/commons-codec-1.3.jar;lib/commons-collections-3.1.jar;lib/commons-configuration-1.1.jar;lib/commons-configuration-1.2.jar;lib/commons-digester-1.6.jar;lib/commons-lang-2.0.jar;lib/commons-logging-1.0.4.jar;lib/jcommon.jar;lib/jdom.jar;lib/jfreechart.jar;lib/jgraph.jar;lib/jhall.jar;lib/junit.jar;lib/log4j.jar;lib/looks-1.3.1.jar;lib/simkit.jar;lib/tools.jar;lib/trang.jar;lib/trangtask.jar;lib/xerces.jar;lib/xercesImpl.jar;lib/xmlrpc-2.0.jar;lib/jwsdp-1.5/jax-qname.jar;lib/jwsdp-1.5/jaxb-api.jar;lib/jwsdp-1.5/jaxb-impl.jar;lib/jwsdp-1.5/jaxb-libs.jar;lib/jwsdp-1.5/jaxb-xjc.jar;lib/jwsdp-1.5/namespace.jar;lib/jwsdp-1.5/relaxngDatatype.jar;lib/jwsdp-1.5/xercesImpl.jar;lib/jwsdp-1.5/xsdlib.jar;lib/jaxb-2.1/activation.jar;lib/jaxb-2.1/codemodel.jar;lib/jaxb-2.1/dtd-parser-1.0.jar;lib/jaxb-2.1/isorelax.jar;lib/jaxb-2.1/istack-commons-runtime.jar;lib/jaxb-2.1/istack-commons-tools.jar;lib/jaxb-2.1/jaxb-api.jar;lib/jaxb-2.1/jaxb-impl.jar;lib/jaxb-2.1/jaxb-xjc.jar;lib/jaxb-2.1/jaxb1-impl.jar;lib/jaxb-2.1/jsr173_1.0_api.jar;lib/jaxb-2.1/msv.jar;lib/jaxb-2.1/relaxngDatatype.jar;lib/jaxb-2.1/resolver.jar;lib/jaxb-2.1/rngom.jar;lib/jaxb-2.1/txw2.jar;lib/jaxb-2.1/xsdlib.jar;lib/jaxb-2.1/xsom.jar;lib/ext/dis.jar;lib/ext/diskit.jar"/>
            </classpath>
            <arg value="${basedir}/BehaviorLibraries/examples/diskit/EventGraphs/OilPlatform.xml"/>
            <jvmarg value="-Djava.endorsed.dirs=${java.endorsed}"/>
        </java>
    </target>
    <!-- To compile single files and update the viskit.jar -->
    <!-- (more info: http://www.netbeans.org/kb/41/freeform-config.html#compilesingle) -->
    <target name="compile-selected-files-in-src">
        <fail unless="files">Must set property 'files'</fail>
        <mkdir dir="build/classes"/>
        <javac destdir="build/classes" includes="${files}" source="1.5" srcdir="src">
            <classpath path="lib/ext/dis.jar;lib/ext/diskit.jar;lib/jaxb-2.1/endorsed/jaxb-api.jar;lib/jaxb-2.1/activation.jar;lib/jaxb-2.1/codemodel.jar;lib/jaxb-2.1/dtd-parser-1.0.jar;lib/jaxb-2.1/isorelax.jar;lib/jaxb-2.1/istack-commons-runtime.jar;lib/jaxb-2.1/istack-commons-tools.jar;lib/jaxb-2.1/jaxb-impl.jar;lib/jaxb-2.1/jaxb-xjc.jar;lib/jaxb-2.1/jsr173_1.0_api.jar;lib/jaxb-2.1/msv.jar;lib/jaxb-2.1/relaxngDatatype.jar;lib/jaxb-2.1/resolver.jar;lib/jaxb-2.1/rngom.jar;lib/jaxb-2.1/txw2.jar;lib/jaxb-2.1/xsdlib.jar;lib/jaxb-2.1/xsom.jar;lib/actions.jar;lib/bsh-2.0b4.jar;lib/commons-beanutils-1.7.0.jar;lib/commons-codec-1.3.jar;lib/commons-collections-3.1.jar;lib/commons-configuration-1.2.jar;lib/commons-digester-1.6.jar;lib/commons-lang-2.0.jar;lib/commons-logging-1.1.jar;lib/jcommon.jar;lib/jdom.jar;lib/jedit.jar;lib/jfreechart.jar;lib/jgraph.jar;lib/jhall.jar;lib/junit.jar;lib/log4j.jar;lib/looks-1.3.1.jar;lib/serializer.jar;lib/simkit.jar;lib/tools.jar;lib/trang.jar;lib/trangtask.jar;lib/xalan.jar;lib/xercesImpl.jar;lib/xmlrpc-2.0.jar"/>
        </javac>
        <echo message="${files}"/>
        <jar basedir="${dir.build.classes}" 
             compress="false"
             destfile="${dist.jar}"
             update="true"/>
    </target>
    <!-- To update the viskit.jar with AnalystReportXMLtoHTML.xslt -->
    <!-- (more info: http://www.netbeans.org/kb/41/freeform-config.html#compilesingle) -->
    <target name="update-viskit-jar-with-AnalystReportXMLtoHTML-xslt">
        <echo message="${analyst.reports.stylesheet}"/>
        <copy file="${analyst.reports.stylesheet}" todir="${dir.build.classes}"/>
        <jar basedir="${dir.build.classes}" 
             compress="false"
             destfile="${dist.jar}"
             update="true"/>
    </target>
</project>
