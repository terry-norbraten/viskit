<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="Viskit-IDE">
    <import file="../build.xml"/>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/articles/freeform-config.html#compilesingle) -->
    <target depends="init" name="compile-selected-files-in-src">
        <fail unless="files">Must set property 'files'</fail>
        <javac destdir="${dir.build.classes}"
               includeantruntime="false"
               includes="${files}"
               source="1.6"
               srcdir="src"
               debug="true">
            <classpath refid="runtime.classpath"/>
            <!-- Reveals generics and deprecation warings -->
            <compilerarg value="${javac.unchecked}"/>
            <compilerarg value="${javac.deprecation}"/>
            <compilerarg value="${javac.debug}"/>
        </javac>
    </target>
    <target depends="init,compile" name="run-selected-file-in-src">
        <fail unless="run.class">Must set property 'run.class'</fail>
        <java classname="${run.class}" failonerror="true" fork="true">
            <classpath refid="runtime.classpath"/>
        </java>
    </target>
</project>
